<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bonoreminder.app">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:name="com.bonoreminder.app.app.AppContext"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.bonoreminder.app.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.bonoreminder.app.AddActivity"
            android:theme="@style/Translucent" />

        <activity
            android:name="com.bonoreminder.app.SetTimeActivity"
            android:theme="@style/Translucent" />

        <activity
            android:name="com.bonoreminder.app.SetRemindActivity"
            android:theme="@style/Translucent" />

        <activity
            android:name="com.bonoreminder.app.SetRepeatActivity"
            android:theme="@style/Translucent" />

        <activity
            android:name="com.bonoreminder.app.SetTimeDialogActivity"
            android:theme="@style/Translucent" />

        <activity
            android:name="com.bonoreminder.app.SetHourActivity"
            android:theme="@style/Translucent" />

        <activity
            android:name="com.bonoreminder.app.EditActivity" />

        <activity
            android:name="com.bonoreminder.app.MainActivity"
            android:launchMode="singleTask"/>
    </application>



</manifest>