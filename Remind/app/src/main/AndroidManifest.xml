<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.remind">

    <application
        android:name=".app.AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.EditActivity"></activity>
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SetRepeatActivity"
            android:theme="@style/Translucent" />
        <activity
            android:name=".ui.SetRemindActivity"
            android:theme="@style/Translucent" />
        <activity
            android:name=".ui.SetHourActivity"
            android:theme="@style/Translucent" />
        <activity
            android:name=".ui.SetTimeActivity"
            android:theme="@style/Translucent" />
        <activity
            android:name=".ui.AddActivity"
            android:theme="@style/Translucent" />
        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTask"></activity>
    </application>

</manifest>